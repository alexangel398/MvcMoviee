@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi sitio web</title>
    <!-- enlaces a los archivos CSS de Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar con Bootstrap -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Mi sitio web</a>
            <!-- Botón para mostrar el menú en dispositivos pequeños -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Menú de navegación -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <!-- Elementos de la barra de navegación -->
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Inicio <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Acerca de</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <!-- Tarjeta con información -->
                <div class="card">
                    <!-- Imagen de la tarjeta -->
                    <img src="https://t2.genius.com/unsafe/1200x675/https://images.genius.com/82f94049684b63acf3dc3fb788e9280d.1920x1080x1.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <!-- Título de la tarjeta -->
                        <h5 class="card-title">¡Hola Mundo!</h5>
                        <!-- Texto de la tarjeta -->
                        <p class="card-text">Este es un ejemplo de página web utilizando Bootstrap y jQuery.</p>
                        <!-- Elemento con el ID "mensaje" -->
                        <h3 id="mensaje">Nombre del artista</h3>
                        <!-- Botón para cambiar el texto -->
                        <button id="cambiarTexto" class="btn btn-primary">Cambiar Texto</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script de jQuery -->
    <script src="js/jquery-3.7.1.min.js"></script>
    <script>
        // Espera a que el documento esté completamente cargado
        $(document).ready(function () {
            // Selecciona el elemento con el ID "cambiarTexto" y agrega un controlador de eventos para el clic
            $("#cambiarTexto").on("click", function () {
                // Guarda el texto actual en una variable
                var textoActual = $("#mensaje").text();

                // Realiza una animación de desvanecimiento para ocultar el texto actual
                $("#mensaje").fadeOut(500, function () {
                    // Cambia el texto del elemento con el ID "mensaje" al hacer clic en el botón
                    $(this).text("!joji, cantante y compositor!").fadeIn(500);
                });
            });
        });
    </script>
</body>
</html>
